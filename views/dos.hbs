<div class="panel panel-primary">
    <!-- heading -->
    <div class="panel-headig">
        <h2 class="panel-title">
            {{image.title}}
        </h2>
    </div>
    <!-- body -->
    <div class="panel-body">
        <p>{{image.description}}</p>
        <div class="col-md-12 text-center">
            <img src="/public/upload/{{image.filename}}" 
            class="img-thumbnail" 
            alt="{{image.title}}">
        </div>
    </div>
    <!-- footer -->
    <div class="panel-footer">
        <div class="row">
            <div class="col-md-8">
                <button class="btn btn-succes"
                id="btn-like"
                data-id="{{image.uniqueId}}">
                    <i class="fa fa-heart">Like</i>
                </button>
                <strong class="likes-count">
                    {{image.likes}}
                </strong>&nbsp;-&nbsp;
                <i class="fa fa-eye"></i>
                <strong>
                    {{image.views}}
                </strong>
                &nbsp;-&nbsp;Publicacion:
                <em class="text-muted">
                    <!-- se usa un helper method de hbs propio para calcular la antuguedad de la publicacion-->
                    {{timeago image.timestamp}}
                </em>
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default">
    <!-- HEADING -->
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-8">
                <strong class="panel-title">
                    Comentarios:
                </strong>
            </div>
            <div class="col-md-4 text-rigth">
                <button class="btn btn-deafult btn-sm" 
                        id="btn-comment"
                        data-id={{image.uniqueId}}>
                            <i class="fa fa-coments-o">
                                Publicar Comentario....
                            </i>
                        </button>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <blockquote id="post-comment">
            <div class="row">
                <!-- Form -->
                <form method="POST"
                action="/images/comment/{
                    {image.uniqueId}}">
                    <!-- P1 -->
                    <div class="form-group col-sm-12">
                        <label for="name" class="col-sm-2 control-label">
                            Nombre:
                        </label>
                        <div class="col-sm-10">
                            <input name="name" type="text" class="form-control">
                        </div>
                    </div>
                    <!--Emmail-->
                    <div class="form-group col-sm-12">
                        <label for="email" class="col-sm-2 control-label">
                            Email:
                        </label>
                        <div class="col-sm-10">
                            <input name="email" type="text" class="form-control">
                        </div>
                    </div>
            </div>
        </blockquote>
    </div>
</div>